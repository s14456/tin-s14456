<%- include('../../fragments/header.ejs') %>
    <main>
        <h2>Lista Pracownikow</h2>
        <table class="table-list">
            <thead >
                <tr>
                   <th><%= __('emp.fields.firstName') %></th>
                   <th><%= __('emp.fields.lastName') %></th>
                   <th><%= __('emp.fields.telephone') %></th>
                   <th><%= __('emp.fields.email') %></th>
                   <th><%= __('list.actions.title') %></th>
                </tr>
                </thead>                
            <tbody>
                <% for (let emp of emps) { %>
                    <tr>
                        <td><%= emp.firstName %></td>
                        <td><%= emp.lastName %></td>
                        <td><%= emp.email %></td>
                        <td>
                            <ul class="list-actions">
                                <li><a href="/employees/details/<%=emp._id%>" class="list-actions-button-details">Szczegóły</a></li>
                                <li><a href="/employees/edit/<%=emp._id%>" class="list-actions-button-edit">Edytuj</a></li>
                                <li><a href="/employees/delete/<%=emp._id%>" class="list-actions-button-delete">Usuń</a></li>
                            </ul>
                        </td>
                    </tr>
                <% } %>
                </tbody>
                
                
        </table>
        <p>
            <a href="employee-form.html" class="button-add">Dodaj nowego pracownika</a>
        </p>
    </main>
    <%- include('../../fragments/footer.ejs') %>
